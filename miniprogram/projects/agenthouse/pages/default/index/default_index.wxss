@import "../../../../../style/public/comm_box_list.wxss";
@import "../../../style/skin.wxss";

page {
	background-color: #fff;
}


.main {
	padding: 0rpx 0rpx 100rpx;
}

.up {
	width: 100%;
	padding: 0 !important;
}

.up image {
	width: 100%;
}

.menu {
	width: 100%;
	margin-top: -80rpx;
	position: relative;
	padding: 0 0rpx;
	overflow: hidden;
	border-top-right-radius: 30rpx;
	border-top-left-radius: 30rpx;
	border-bottom-left-radius: 20rpx;
	border-bottom-right-radius: 20rpx;
}

.menu .inner {
	position: relative;
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	padding: 20rpx 30rpx;
	background-color: #fff;
	z-index: 999;
	flex-direction: column;
	border-radius: 20rpx;
}

.menu .inner .mm {
	display: flex;
	width: 100%;
}

.menu .inner .mm .item {
	width: 25%;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 180rpx;
}

.menu .inner .mm .item .item-inner {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;

}

.menu .inner .mm .item .item-inner .img {
	width: 100rpx;
	height: 100rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 50%;
	background-color: #fff;
}

.menu .inner .mm .item .item-inner .img image {
	width: 90rpx;
	height: 90rpx;
}

.menu .inner .mm .item .item-inner .title {
	font-size: 26rpx;
	color: #333;
	margin-top: 0rpx;
}

.down {
	width: 100%;
	box-sizing: border-box;
	padding: 10rpx 0rpx;
	z-index: 9999;
	position: relative;
}

.loading {
	color: var(--projectColor) !important;
}

.area {
	width: 100%;
	border-radius: 20rpx;
	padding: 10rpx 0 0rpx;
}

.area .hot-line {
	width: 100%;
	display: flex;
	justify-content: space-between;
	padding: 20rpx 30rpx;
	align-items: center;
	margin-top: 10rpx;
	align-items: center;
	background-color: #f8f8f8;
}

.area .hot-line .left {
	display: flex;
	font-size: 30rpx;
	font-weight: bold;
	color: #333;
	margin-top: 10rpx;
	align-items: center;
	position: relative;
}

.area .hot-line .left .cir {
	position: absolute;
	top: 0;
	left: 0;
	height: 26rpx;
	width: 26rpx;
	background-color: var(--projectColor);
	border-radius: 50%;
	opacity: .7;
}

.area .hot-line .left .tt {
	margin-left: 14rpx;
	z-index: 9;
}

.area .hot-line .right {
	font-size: 24rpx;
	color: #999;
}

.scroll-x {
	width: 100%;
	padding: 0 0rpx 0 30rpx;
}

.scroll-view {
	white-space: nowrap;
	width: 100%;
	flex-direction: row;
}

.scroll-view .product {
	padding: 30rpx 0;
}

.scroll-view .product .scroll-item {
	display: inline-flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	margin-right: 10rpx;
}


.scroll-view .product .scroll-item image {
	width: 184rpx;
	height: 190rpx;
	margin-bottom: 10rpx;
	border-radius: 12rpx;
}

.scroll-view .product .scroll-item .title {
	font-size: 24rpx;
	color: #333;
	width: 184rpx;
	text-align: center;
}

.scroll-view .activity {
	padding: 30rpx 0;
}

.scroll-view .activity .scroll-item {
	display: inline-flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	position: relative;
	margin-right: 10rpx;
	overflow: hidden;
	border-radius: 12rpx;
}

.scroll-view .activity .scroll-item image {
	width: 400rpx;
	height: 190rpx;
	border-radius: 12rpx;
}

.scroll-view .activity .scroll-item .title {
	font-size: 22rpx;
	width: 400rpx;
	text-align: center;
	position: absolute;
	bottom: 0;
	background-color: rgba(0, 0, 0, 0.5);
	color: #fff;
	padding: 6rpx 2rpx;
}

/* 热租 */
.rent-list {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	padding: 30rpx;
}

.rent-list .item {
	position: relative;
	width: 100%;
	display: flex;
	background-color: #fff;
	padding: 6rpx 20rpx 6rpx 0;
	border-radius: 20rpx;
	margin-bottom: 80rpx;
	position: relative;
	border-bottom-left-radius: 60rpx;
	height: 150rpx;
}

.rent-list .item .left {
	width: 170rpx;
	height: 200rpx;
	margin-right: 20rpx;
	border-radius: 14rpx;
	border-top-right-radius: 50rpx;
	margin-top: -30rpx;
	z-index: 9;
}

.rent-list .item .left {
	box-shadow: 4rpx 2rpx 0rpx 0rpx #f5dfcf;
}

.rent-list .item .left image {
	width: inherit;
	height: inherit;
	border-radius: inherit;
}

.rent-list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	padding: 10rpx;
	align-items: flex-start;
	justify-content: space-between;
	position: relative;
}

.rent-list .item .right .link {
	z-index: 9;
	position: absolute;
	background-color: #ccc;
	right: 10rpx;
	top: 50%;
	transform: translateY(-50%);
	font-size: 22rpx;
	border-radius: 30rpx;
	color: #fff;
	padding: 10rpx 26rpx;
}

.rent-list .item .right .name {
	width: 100%;
	display: flex;
	align-items: center;
}

.rent-list .item .right .name .t1 {
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
}

.rent-list .item .right .name .t2 {
	flex: 1;
	font-size: 24rpx;
	color: #777;
	margin-left: 10rpx;
}

.rent-list .item .right .line1 {
	width: 100%;
	color: #999;
	font-size: 22rpx;
	padding: 2rpx 0;
	display: flex;
	align-items: center;
}


.rent-list .item .right .line2 {
	width: 100%;
	padding: 0rpx 0;
	display: flex;
	color: var(--projectColor);
	align-items: center;
}

.rent-list .item .right .line2 .t1 {
	font-size: 30rpx;
	font-weight: bold;
}

.rent-list .item .right .line2 .t2 {
	font-size: 22rpx;
	margin-left: 6rpx;
}