<template name="menuTpl">
	<view class="tab-bar">
		<view wx:if="{{returnHome}}" class="tab-bar-home" bindtap="url" data-type="relaunch" data-url="/pages/home/index/home_index">
			<text class="tab-bar-home-text icon-homefill text-grey"></text>
		</view>

		<view class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/agenthouse/pages/default/index/default_index">
			<image class="tab-icon" src="/projects/agenthouse/images/tabbar/home{{curMenu=='home_index'?'_cur':''}}.png"></image>
			<view class="tab-text {{curMenu=='home_index'?'menu-project':''}}">首页</view>
		</view>

		<view class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/agenthouse/pages/cate/index/cate_index">
			<image class="tab-icon" src="/projects/agenthouse/images/tabbar/cate{{curMenu=='cate_index'?'_cur':''}}.png"></image>
			<view class="tab-text {{curMenu=='cate_index'?'menu-project':''}}">找小区</view>
		</view>

		<view class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/agenthouse/pages/product/index/product_index">
			<image class="tab-icon" src="/projects/agenthouse/images/tabbar/product{{curMenu=='product_index'?'_cur':''}}.png"></image>
			<view class="tab-text {{curMenu=='product_index'?'menu-project':''}}">找好房</view>
		</view>

		<view class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/agenthouse/pages/article/index/article_index">
